{
    "name": "angular1-files-ts",
    "displayName": "angular1-files-ts",
    "description": "Quickly scaffold angular1 file templates",
    "version": "0.0.1",
    "publisher": "tautonic",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.addAngular1Directive",
                "title": "Generate NG1 Directive"
            },
            {
                "command": "extension.addAngular1Service",
                "title": "Generate NG1 Service"
            },
            {
                "command": "extension.addAngular1Module",
                "title": "Generate NG1 Module"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "when": "",
                    "command": "extension.addAngular1Directive",
                    "group": "Angular1"
                },
                {
                    "when": "",
                    "command": "extension.addAngular1Service",
                    "group": "Angular1"
                },
                {
                    "when": "",
                    "command": "extension.addAngular1Module",
                    "group": "Angular1"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.3",
        "vscode": "^1.1.5",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42",
        "rimraf": "^2.6.1"
    }
}